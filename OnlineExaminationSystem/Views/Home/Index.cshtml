@{
    ViewBag.Title = "Home Page";
}

@model OnlineExaminationSystem.Models.SessionModel
<div class="jumbotron">
  
    <h2><span style="color:darkorange"><i>Online </i></span>Exam System</h2>
</div>
@if(TempData["message"]!=null)
{
    <div class="row">
        <div class="col-md-10">
            <p>
                @Html.Raw(TempData["message"])
            </p>
        </div>
    </div>
}

@using (Html.BeginForm("Instructions", "Home", FormMethod.Post))
{

<div class="container">
    <div class="row form-horizontal">

        <div class="form-group">
            <div class="col-md-3">@Html.Label("Select Test")</div>
            <div class="col-md-5">@Html.DropDownListFor(x=>x.TestId,new SelectList(ViewBag.Tests,"Id","Name",Model.TestId),"--Select Test--", new { @class="form-control"})</div>
        </div>
        <div class="form-group">
            <div class="col-md-3">@Html.Label("Enter Name")</div>
            <div class="col-md-5">@Html.TextBoxFor(x => x.UserName, Model.UserName, new { @class = "form-control" })</div>
        </div>
        <div class="form-group">
            <div class="col-md-3">@Html.Label("Enter Email")</div>
            <div class="col-md-5">@Html.TextBoxFor(x => x.Email, Model.Email, new { @class = "form-control" })</div>
        </div>
        <div class="form-group">
            <div class="col-md-3">@Html.Label("Enter Phone")</div>
            <div class="col-md-5">@Html.TextBoxFor(x => x.Phone, Model.Phone, new { @class = "form-control" })</div>
        </div>

        <div class="form-group">
            <div class="col-md-3"></div>
            <div class="col-md-5"><button type="submit" class="btn btn-primary">Continue</button></div>
        </div>
    </div>
    </div>

}
